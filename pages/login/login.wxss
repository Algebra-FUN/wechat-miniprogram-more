@import '../../app.wxss';
#login{
  width: 400%;
  display: flex;
  transition: all 0.4s;
}
.contain{
  width: 100%;
  overflow-x: hidden;
}
.login-block{
  width: 25%;
  flex: 0.25
}
.signup-button{
  opacity: 0;
}
.index-button{
  position:absolute;
  top:50%;
  left:12.5%;
  width:8%;
  transform:translate(-50%,0);
  background-color: var(--color-yellow);
  border-radius:30px;
  padding:10px;
  box-sizing:border-box;
  color:#ffffff;
  font-weight:bold;
  font-size:1rem;
  box-shadow:0px 0px rgba(0,0,0,0.05) inset, 2px 3px 10px 0px rgba(0,0,0,0.2);
  transition: all 0.4s;
}
.button-hover{
  transform: translate(-50%,-5px);
  box-shadow:0px 0px rgba(0,0,0,0.05) inset, 2px 8px 20px 2px rgba(0,0,0,0.2);
}
.signup-button{
  height: 50rpx;
  width: 100%;
  z-index: 999;
}
.button-class{
  position:absolute;
  top:50%;
  left:50%;
  transform:translate(-50%, -50%);
  width:100%;
  margin:0 auto;
  text-align:center;
}
.play-button{
  position:fixed;
  bottom:5%;
  right:12%;
  width:100rpx;
  filter:drop-shadow(1px 2px 4px var(--color-shadow));
}
.play-button-hover{
  transform: translate(0,-5px);
  filter:drop-shadow(2px 5px 10px var(--color-shadow));
}
.section{
  position:absolute;
  top:700rpx;
  width:25%;
  margin:0 auto;
  text-align: center;
}
.section-title{
  margin:0 auto;
  width:80%;
  text-align:center;
  color:var(--color-yellow);
  font-size: 1rem;
  font-weight:bold;
  display:flex;
  justify-content:center;
  align-items:center;

}
.selct-item-list{
  display: flex;
  align-items: center;
  justify-content:center;
}
.selct-item-list.active{
  opacity: 0.7
}
.selct-img-ellipse{
  width: 20rpx;
}
.selct-type-text{
  width: 40%;
  border-bottom: 2px #ffffff solid;
  padding: 15rpx;
  margin: 10rpx;
  color: #ffffff;
  font-weight:bold;
  font-size:35rpx;
  box-sizing:border-box;
  background-color: var(--color-yellow);
  border-radius:30px;
}
.selct-text-contain{
  width: 100%;
  display:flex;
  justify-content:center;
}
.pick-shcool-position{
  transform:translate(0,-50%);
  position:absolute;
  top:0;
  width: 100%;
  z-index:50000;
}
.pick-shcool{
  width:80%;
  border: 1.8px #ffffff solid;
  overflow-y:scroll;
  margin:0 auto;
  color: var(--color-yellow);
  background-color: #e1d8d3;
  text-align: center
}
.pick-shcool-contain{
  width:100%;
  height:200px;
  text-align: center
}
.msg-arrow{
  width:20rpx;
  height:32rpx;
  transform:rotate(90deg);
}
.msg-arrow-contain{
  padding-left:25rpx;
}
.section-block{
  margin-bottom:50px;
  box-sizing:border-box;
}
.goindex-active{
  transform: translate(0, -800px);
  transition: all 0.5s;

}
.index-more{
  height: 100%;
  width: 100%
}
.index-arrow{
  width:100%;
  height:60rpx;
  margin: 0 auto;
  --height:60rpx;
  z-index:200;
  position:absolute;
  bottom:200rpx;
  transition:all ease-out .2s;
  overflow: hidden;
  display:flex;
  justify-content:center;
}
.load-text{
  font-size: 1rem;
  display: flex;
}
#loading{
  width: 100%;
  position:absulute;
  top:0;
  text-align:center;
  color:var(--color-yellow);
  z-index:9999;
  background-color:#cfc6c1;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}